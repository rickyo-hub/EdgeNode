---
const { title, description, lang = "en" } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <title>{title}</title>
  <meta name="description" content={description} />

  <link rel="canonical" href={Astro.url.href} />
  <link
  rel="alternate"
  hreflang="ko"
  href={`${Astro.site}/ko${Astro.url.pathname.replace(/^\/(ko|en)/, "")}`}
/>

<link
  rel="alternate"
  hreflang="en"
  href={`${Astro.site}/en${Astro.url.pathname.replace(/^\/(ko|en)/, "")}`}
/>
</head>

<body>
  <slot />
</body>
</html>